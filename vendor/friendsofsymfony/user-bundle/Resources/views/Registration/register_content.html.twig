{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register col-md-5 offset-md-4', 'style': 'border: 2px solid black; padding: 20px;'} }) }}
<h2 class="text-center">Inscription</h2>
<br>
<div class="form-group row">
    <label class="col-md-offset-1 col-md-3">Email</label>
    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'style': 'display:inline-block;width:58.33333333%;'}}) }}
    <div class="text-danger col-md-offset-3 col-md-7" style="padding: 3px;margin-top: 3px;">
        <strong>{{ form_errors(form.email) }}</strong>
    </div>
</div>

<div class="form-group row">
    <label class="col-md-offset-1 col-md-3">Nom d'utilisateur</label>
    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'style': 'display:inline-block;width:58.33333333%;'}}) }}
    <div class="text-danger col-md-offset-3 col-md-7" style="padding: 3px;margin-top: 3px;">
        <strong>{{ form_errors(form.username) }}</strong>
    </div>
</div>

<div class="form-group row">
    <label class="col-md-offset-1 col-md-3">Mot de passe</label>
    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'style': 'display:inline-block;width:58.33333333%;'}}) }}
    <div class="text-danger col-md-offset-3 col-md-7" style="padding: 3px;margin-top: 3px;">
        <strong>{{ form_errors(form.plainPassword.first) }}</strong>
    </div>
</div>

<div class="form-group row">
    <label class="col-md-offset-1 col-md-3">Répéter le mot de passe</label>
    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'style': 'display:inline-block;width:58.33333333%;'}}) }}
    <div class="text-danger col-md-offset-3 col-md-7" style="padding: 3px;margin-top: 3px;">
        <strong>{{ form_errors(form.plainPassword.second) }}</strong>
    </div>
</div>

<div class="form-group row">
    <input class="col-md-offset-5 btn btn-success" type="submit" value="{{ 'registration.submit'|trans }}" />
</div>
{{ form_end(form) }}
</form>
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="offset-md-3 col-md-6 row" action="{{ path("fos_user_security_check") }}" method="post" style="border: 2px solid black;">
    <br>
    {% if error %}
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
        </div>
    {% endif %}
    <h1 class="col-md-12 text-center text-capitalize"><i class="fa fa-user"></i> Connexion</h1>

    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="offset-md-2 col-sm-8">
        <div class="form-group row">
            <label for="username" class="">{{ 'security.login.username'|trans }}</label>
            <input type="text" class="form-control col-md-7" id="username" name="_username" value="{{ last_username }}" required="required" style="display: inline-block;"/>
        </div>
        <div class="form-group row">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" class="form-control col-md-7" id="password" name="_password" required="required" />
        </div>
        <div class="form-group row">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <div class="form-group row">
            <a title="Vous ne vous rappelez pas de votre mot de passe? Réinitialiser le!" href="{{ path("fos_user_resetting_request") }}">Mot de passe oublié?</a> | <a title="Vous n'avez pas de compte? Créez en un gratuitement" href="{{ path("fos_user_registration_register") }}">Inscription</a>
        </div>

        <div class="form-group row">
            <input type="submit" class="col-md-offset-3 btn btn-lg btn-success " id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </div>
</form>

